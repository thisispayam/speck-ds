{
  "name": "@thisispayam/speck-ds",
  "version": "1.0.0",
  "description": "Speck DS - A tokenized React design system connected to Figma",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./styles": "./dist/styles/tokens.css",
    "./styles/tokens": "./dist/styles/tokens.css",
    "./styles/helpers": "./dist/styles/helpers.css"
  },
  "files": [
    "dist"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "scripts": {
    "dev": "storybook dev -p 6006",
    "build": "tsup",
    "build:storybook": "storybook build",
    "sync:tokens": "node scripts/fetch-figma-tokens.js",
    "fetch:figma": "node scripts/fetch-figma.js",
    "prepublishOnly": "npm run sync:tokens && npm run build",
    "storybook": "storybook dev -p 6006",
    "deploy:storybook": "storybook build && gh-pages -d storybook-static",
    "test": "echo \"No tests yet\" && exit 0"
  },
  "keywords": [
    "react",
    "design-system",
    "figma",
    "tokens",
    "components",
    "ui"
  ],
  "author": "thisispayam",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/thisispayam/speck-ds.git"
  },
  "homepage": "https://thisispayam.github.io/speck-ds",
  "dependencies": {
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@storybook/addon-a11y": "^8.6.14",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/blocks": "^8.6.14",
    "@storybook/react": "^8.6.14",
    "@storybook/react-vite": "^8.6.14",
    "@vitejs/plugin-react": "^5.1.2",
    "axios": "^1.13.2",
    "dotenv": "^17.2.3",
    "gh-pages": "^6.3.0",
    "storybook": "^8.6.14",
    "style-dictionary": "^4.4.0",
    "tsup": "^8.5.1",
    "vite": "^6.4.1"
  }
}
